{
    "name": "gradient-theme",
    "displayName": "Gradient Theme",
    "description": "A Gradient Theme",
    "version": "0.1.0",
    "author": "shaobeichen",
    "publisher": "shaobeichen",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/shaobeichen/gradient-theme"
    },
    "engines": {
        "vscode": "^1.33.0"
    },
    "keywords": [
        "gradient",
        "theme",
        "渐变"
    ],
    "categories": [
        "Themes"
    ],
    "activationEvents": [
        "onCommand:gradient-theme.enableNeon",
        "onCommand:gradient-theme.disableNeon"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "themes": [
            {
                "label": "gradient-dracula-theme",
                "uiTheme": "vs-dark",
                "path": "./themes/dracula-theme.json"
            },
            {
                "label": "gradient-bearded-theme-arc",
                "uiTheme": "vs-dark",
                "path": "./themes/bearded-theme-arc.json"
            }
        ],
        "commands": [
            {
                "command": "gradient-theme.enableNeon",
                "title": "Gradient Theme: Enable Neon Dreams"
            },
            {
                "command": "gradient-theme.disableNeon",
                "title": "Gradient Theme: Disable Neon Dreams"
            }
        ],
        "configuration": {
            "title": "Gradient Theme",
            "properties": {
                "gradient-theme.brightness": {
                    "type": "number",
                    "default": 0.45,
                    "description": "Set the brightness value for the glow effect. 0.0 is fully transparent and 1.0 is fully bright"
                },
                "gradient-theme.disableGlow": {
                    "type": "boolean",
                    "default": false,
                    "description": "Disable the glow effect, but show Synthwave '84 editor chrome updates"
                }
            }
        }
    }
}